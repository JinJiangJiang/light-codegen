{
  "codeGenForm": {
    "formId": "codeGenForm",
    "actions": [
      {
        "host": "lightapi.net",
        "service": "codegen",
        "action": "generate",
        "version": "0.0.1",
        "title": "Generate",
        "success": "/"
      }
    ],
    "schema": {
      "title": "Service",
      "type": "object",
      "required": [
        "generators"
      ],
      "properties": {
        "generators": {
          "type": "array",
          "items": {
            "properties": {
              "framework": {
                "title": "Framework",
                "type": "string",
                "enum": [
                  "openapi",
                  "openapikotlin",
                  "swagger",
                  "light-graphql-4j",
                  "light-hybrid-4j"
                ]
              },
              "model": {
                "title": "Model",
                "type": "string"
              },
              "config": {
                "title": "Config",
                "type": "string"
              }
            },
            "required": [
              "framework",
              "model",
              "config"
            ]
          },
          "maxItems": 5,
          "minItems": 1
        }
      }
    },
    "form": [
      {
        "type": "help",
        "description": "Click the NEW button to add one or more services.",
        "variant": "h6",
        "align": "left",
        "color": "secondary"
      },
      {
        "key": "generators",
        "add": "New",
        "style": {
          "add": "btn-success"
        },
        "items": [
          {
            "key": "generators[].framework",
            "type": "select",
            "titleMap": [
              {
                "name": "OpenAPI",
                "value": "openapi"
              },
              {
                "name": "OpenAPI Kotlin",
                "value": "openapikotlin"
              },
              {
                "name": "Swagger",
                "value": "swagger"
              },
              {
                "name": "GraqphQL",
                "value": "light-grahql-4j"
              },
              {
                "name": "Hybrid",
                "value": "light-hybrid-4j"
              }
            ]
          },
          "generators[].model",
          "generators[].config"
        ]
      }
    ]
  }
}
